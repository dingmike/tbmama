extends head
append head
  script(type='text/javascript' src="/javascripts/homepage.js")
  script(type='text/javascript' src="/javascripts/widget.js")
block content
  body
    //-div.head-menu
    //-  div.container
    //-    div.row
    //-      div.col-lg-2.col-md-2.pull-right
    //-        ul
    //-          li
    //-            a.fe-1 登陆
    //-          li |
